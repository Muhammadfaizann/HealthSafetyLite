<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthSafetyAppLite.Controls.RoundedEntry"
       Padding="0" CornerRadius="{ OnPlatform Android=50, iOS=20}"
       HeightRequest="40" x:Name="frame"
       BackgroundColor="White">
    <Entry x:Name="txt" Margin="10"
            Text="{Binding Source={x:Reference frame}, Path=Text}"
                Visual="Material" />
</Frame>